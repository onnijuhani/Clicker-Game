<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: linear-gradient(from 15% 100% to 100% 15%, #0F2027, #203A43, #2C5364); -fx-background-radius: 15; -fx-border-color: white; -fx-border-radius: 15; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WorkWalletController">
   <children>
      <VBox alignment="CENTER" layoutX="5.0" layoutY="6.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Work Wallet" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="workWallet" alignment="CENTER" prefHeight="60.0" prefWidth="100.0" style="-fx-background-color: white; -fx-background-radius: 10;" text="Label">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <tooltip>
                  <Tooltip text="This is your Work Wallet. Resources generated will be added here. After taxation they will automatically be added to your main wallet. ">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </Label>
            <Label alignment="CENTER" prefHeight="10.0" prefWidth="86.0" text="Tax Rates" textFill="#fffdfd">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Label fx:id="taxRates" alignment="CENTER" prefHeight="60.0" prefWidth="100.0" style="-fx-background-color: white; -fx-background-radius: 10;" text="Label">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
               <tooltip>
                  <Tooltip text="Tax Rates: Currently set by your supervisor. Overthrow them to take control of tax settings and collect taxes from all your subordinates.">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
