      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <GridPane alignment="TOP_CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label fx:id="foodLabel" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="25.0" prefHeight="30.0" prefWidth="185.0" style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="walletBoxes" text="-" textAlignment="CENTER" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </GridPane.margin>
            </Label>
            <TextField alignment="CENTER" editable="false" promptText="lol" style="-fx-background-radius: 15;" stylesheets="@borders.css" text="Food:">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </GridPane.margin>
               <tooltip>
                  <Tooltip text="Food is the most basic resource in the game, crucial for property maintenance. Tradable for more valuable resources in the exchange.">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </TextField>
         </children>
      </GridPane>
      <GridPane alignment="CENTER" prefHeight="74.0" prefWidth="320.0" GridPane.columnIndex="1">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label fx:id="alloysLabel" alignment="CENTER" prefHeight="30.0" prefWidth="233.0" style="-fx-background-color: white; -fx-background-radius: 10;" text="-" textAlignment="CENTER" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </GridPane.margin>
            </Label>
            <TextField alignment="CENTER" editable="false" prefHeight="51.0" prefWidth="213.0" style="-fx-background-radius: 15;" text="Alloys:">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </GridPane.margin>
               <tooltip>
                  <Tooltip text="Alloys are vital for constructing buildings and setting up defenses on your property. Tradable for in the exchange.">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Tooltip>
               </tooltip>
            </TextField>
         </children>
      </GridPane>
      <GridPane GridPane.columnIndex="2">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label id="10" fx:id="goldLabel" alignment="CENTER" prefHeight="30.0" prefWidth="233.0" style="-fx-background-color: white; -fx-background-radius: 10;" text="-" textAlignment="CENTER" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </GridPane.margin>
            </Label>
            <TextField alignment="CENTER" editable="false" style="-fx-background-radius: 15;" text="Gold:">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </GridPane.margin>
               <tooltip>
                  <Tooltip text="Gold is the most valuable resource and primary currency in the game. Essential for shop transactions and most upgrades. Tradable in the exchange and crucial for game progression." />
               </tooltip>
            </TextField>
         </children>
      </GridPane>
      <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="3">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <VBox prefHeight="102.0" prefWidth="320.0">
                     <children>
                        <Label fx:id="timeView" alignment="CENTER" contentDisplay="CENTER" prefHeight="34.0" prefWidth="502.0" text="Time" textAlignment="CENTER" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                           <tooltip>
                              <Tooltip consumeAutoHidingEvents="false" text="Timer: Represents game time where 1 second equals one day. You have the ability to start or stop time as needed." textAlignment="RIGHT" textOverrun="CLIP" />
                           </tooltip>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="10.0" prefWidth="425.0">
                           <children>
                              <Button fx:id="stopTimeBtn" mnemonicParsing="false" onMouseClicked="#stopTime" prefHeight="16.0" prefWidth="95.0" style="-fx-background-radius: 10;" text="Stop">
                                 <HBox.margin>
                                    <Insets right="2.0" top="-2.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="startTimeBtn" mnemonicParsing="false" onMouseClicked="#startTime" prefHeight="16.0" prefWidth="95.0" style="-fx-background-radius: 10;" text="Start">
                                 <HBox.margin>
                                    <Insets left="2.0" top="-2.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
