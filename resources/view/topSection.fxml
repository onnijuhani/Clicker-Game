<GridPane fx:id="topSection" alignment="TOP_RIGHT" prefHeight="72.0" prefWidth="1600.0" style="-fx-background-color: #330033; -fx-background-radius: 15; -fx-border-color: white; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TopSectionController">
